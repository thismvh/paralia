<% include ../partials/header %>

<div class="container">
    <div class="row">
        <% console.log(currentUser) %>
         <form class="form-signin text-center" action="/beaches/<%= beach_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
            <img class="mb-4" src="/imgs/beach-480.png" alt="" width="72" height="72">
            <div class="col-md-12 text-center">
                <h1 class="h3 mb-3 font-weight-normal">Edit Your Comment</h1>
            </div>
            
            <div class="form-group">
                <label for="commentText" class="sr-only">Comment</label>
                <textarea id="commentText" class="form-control comment" name="comment[text]"><%= comment.text %></textarea>    
            </div>
            
            <div>
                <button class="btn-lg btn-primary btn-block btn-circle">Save changes <i class="fas fa-save"></i></button>
            </div>
            <a href="/beaches/<%= beach_id %>" class="float-sm-left">Go back</a>
        </form>
    </div>
</div>

<% include ../partials/footer %>